class Solution {
    public int countAtMostK(int arr[], int k) {
        if (k <= 0) return 0;

        int n = arr.length;
        int left = 0;
        int count = 0;
        int distinctCount = 0;

        // Assuming elements in arr are in range [0, 100000]
        // Adjust the size based on the problem constraints
        int[] freq = new int[100001];

        for (int right = 0; right < n; right++) {
            // 1. If this is a new distinct element, increment distinctCount
            if (freq[arr[right]] == 0) {
                distinctCount++;
            }
            freq[arr[right]]++;

            // 2. Shrink window if distinct elements exceed k
            while (distinctCount > k) {
                freq[arr[left]]--;
                // If frequency drops to 0, we lost one distinct element
                if (freq[arr[left]] == 0) {
                    distinctCount--;
                }
                left++;
            }

            // 3. Add the number of subarrays ending at 'right'
            count += (right - left + 1);
        }

        return count;
    }
}
